<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/select_list"
    >


    <RelativeLayout
        android:id="@+id/rl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12">

        <!--名称-->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_6"
            android:ellipsize="end"
            android:lines="1"
            android:text="定期宝A17030811"
            android:textColor="@color/text_black_pre"
            android:textSize="@dimen/sp_13"/>

        <!--天数-->
        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:text="30天"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"/>

        <!--分割线-->
        <View
            android:id="@+id/tv_divide"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_day"
            android:layout_alignTop="@+id/tv_day"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_toLeftOf="@+id/tv_day"
            android:background="@color/text_stroke"
            />

        <!--加息利率或者理财金额度-->
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_name"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_toLeftOf="@+id/tv_divide"
            android:text="加息券3.00%"
            android:textColor="@color/bule_press"
            android:textSize="@dimen/sp_13"/>


        <!--使用日期-->
        <TextView
            android:id="@+id/tv_use_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="@dimen/dp_1"
            android:text="2017-02-03 10:10:10"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_10"/>

        <!--长分割线-->
        <View
            android:id="@+id/v_long_divie"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/tv_use_date"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@color/text_stroke"
            />

        <!--本金-->
        <TextView
            android:id="@+id/tv_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_long_divie"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="8888888.23元"
            android:textColor="@color/text_black_pre"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_principal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_principal"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/txt_jxbj"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11"/>



        <!--回款日 -->
        <TextView
            android:id="@+id/tv_return_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_principal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_14"
            android:gravity="right|center_vertical"
            android:text="最迟还款日2017-03-05"
            android:textColor="@color/text_black_pre"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_return_date"
            android:layout_alignBottom="@+id/tv_principal_text"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="right|center_vertical"
            android:text="@string/txt_hkr"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11"/>



        <!--加息收益 或者理财收益-->
        <TextView
            android:id="@+id/tv_earnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_principal"
            android:layout_marginLeft="@dimen/dp_131"
            android:gravity="center"
            android:text="最大167.25元"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_14"/>

        <TextView
            android:id="@+id/tv_earnings_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_principal_text"
            android:layout_alignLeft="@+id/tv_earnings"
            android:layout_below="@+id/tv_earnings"
            android:layout_marginTop="@dimen/dp_6"
            android:gravity="center"
            android:text="@string/txt_jxsy"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_below="@+id/rl_card"/>


</RelativeLayout>