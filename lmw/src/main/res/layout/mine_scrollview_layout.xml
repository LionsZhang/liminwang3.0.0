<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/mine_layout"
              style="@style/mainStyle"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_gray"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/person_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_195"
        android:background="@color/bg_bule"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10">

        <RelativeLayout
            android:id="@+id/user_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80">

            <RelativeLayout
                android:id="@+id/head_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_21">

                <com.example.administrator.lmw.view.CircleImageView
                    android:id="@+id/head_iv"
                    android:layout_width="@dimen/dp_77"
                    android:layout_height="@dimen/dp_77"
                    android:layout_centerVertical="true"
                    android:src="@drawable/img_my_boy"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_info_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/head_rl">

                <TextView
                    android:id="@+id/phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="@dimen/dp_3"
                    android:text="12345678901"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_toRightOf="@+id/phone_tv"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/phone_tv"
                    android:layout_toRightOf="@+id/divider"
                    android:padding="@dimen/dp_3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/regist_hint_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/phone_tv"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_toRightOf="@+id/name_tv"
                    android:padding="@dimen/dp_3"
                    android:text="注册领现金"
                    android:textColor="@color/white_70"
                    android:textSize="@dimen/sp_12"/>

                <ImageView
                    android:id="@+id/vip_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/phone_tv"
                    android:layout_below="@+id/phone_tv"
                    android:src="@drawable/my_vip_iv"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/arrow_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_19"
                android:src="@drawable/my_jt_ent"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_72"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/ac_income_rl"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/divide_1"
                android:paddingTop="@dimen/dp_10">

                <RelativeLayout
                    android:id="@+id/ac_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/ac_income_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="@dimen/dp_1"
                        android:layout_toLeftOf="@+id/ac_income_hint_tv"
                        android:src="@drawable/my_ljsy"/>

                    <TextView
                        android:id="@+id/ac_income_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_50"
                        android:gravity="center"
                        android:text="@string/mine_accuclation"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ac_rl"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/ac_income_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"/>

                    <TextView
                        android:id="@+id/ac_income_point_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ac_income_tv"
                        android:layout_toRightOf="@+id/ac_income_tv"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"/>
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/divide_1"
                android:layout_width="1px"
                android:layout_height="@dimen/dp_50"
                android:layout_centerInParent="true"
                android:background="@color/background_gray"/>

            <RelativeLayout
                android:id="@+id/finance_number_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/divide_1"
                android:paddingTop="@dimen/dp_10">

                <RelativeLayout
                    android:id="@+id/finance_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/dp_40">

                    <ImageView
                        android:id="@+id/finance_number_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/my_zzc"/>

                    <TextView
                        android:id="@+id/finance_hint_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_toRightOf="@+id/finance_number_iv"
                        android:gravity="center"
                        android:text="@string/mine_finance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/finance_rl"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/finance_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_18"/>

                    <TextView
                        android:id="@+id/finance_number_point_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/finance_number_tv"
                        android:layout_toRightOf="@+id/finance_number_tv"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/finance_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/finance_rl"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_toRightOf="@+id/finance_rl"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_3"
                    android:src="@drawable/ic_my_eyes_on"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/desposit_txt_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_14"
            android:layout_gravity="bottom"
            android:background="@drawable/xw_icon_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/xw_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/pic_logo_xw"/>

            <TextView
                android:id="@+id/tv_xw_open"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/xw_icon"
                android:gravity="center"
                android:text="资金受新网银行监管保护中"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_9"/>
        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_72"
        android:background="@color/white"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/credit_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/divide_2"
            android:background="@drawable/click_selector">

            <ImageView
                android:id="@+id/credit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_38"
                android:src="@drawable/tixian"/>

            <TextView
                android:id="@+id/credit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/credit_iv"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/credit_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/credit_tv"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/credit_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/credit_num_tv"
                android:layout_below="@+id/credit_num_tv"
                android:layout_centerHorizontal="true"
                android:text="提现中"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_10"/>
        </RelativeLayout>

        <View
            android:id="@+id/divide_2"
            android:layout_width="1px"
            android:layout_height="@dimen/dp_50"
            android:layout_centerInParent="true"
            android:background="@color/background_gray"/>

        <RelativeLayout
            android:id="@+id/fill_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/divide_2"
            android:background="@drawable/click_selector">

            <ImageView
                android:id="@+id/fill_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_41"
                android:src="@drawable/my_cz"/>

            <TextView
                android:id="@+id/fill_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/fill_iv"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/fill_hint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/fill_tv"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/fill_tv"
                android:text="免手续费"
                android:textColor="@color/text_red"
                android:textSize="@dimen/sp_12"/>

            <TextView
                android:id="@+id/fill_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fill_hint_tv"
                android:layout_below="@+id/fill_hint_tv"
                android:layout_centerHorizontal="true"
                android:text="提现中"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12"
                android:visibility="invisible"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/risk_tip_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:visibility="gone">

        <TextView
            android:id="@+id/risk_cacumulate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/delect_risk_icon"
            android:gravity="center"
            android:text="@string/txt_risk_camuate"
            android:textSize="@dimen/sp_9"
            />

        <ImageView
            android:id="@+id/delect_risk_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_13"
            android:padding="@dimen/dp_8"
            android:src="@drawable/btn_close1"/>


    </RelativeLayout>

    <com.example.administrator.lmw.view.SettingNextItemNotIconView
        android:id="@+id/can_use_money_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_10"
        app:next_arrow="@drawable/btn_set_get"
        app:next_hint_color="@color/text_gray"
        app:next_icon="@drawable/my_kyye"
        app:next_show_divider="true"
        app:next_title="可用余额"
        app:next_title_color="@color/text_black"/>

    <com.example.administrator.lmw.view.SettingNextItemNotIconView
        android:id="@+id/invest_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:next_arrow="@drawable/btn_set_get"
        app:next_hint_color="@color/text_gray"
        app:next_icon="@drawable/my_wdtz"
        app:next_show_divider="true"
        app:next_title="我的投资"
        app:next_title_color="@color/text_black"/>

    <com.example.administrator.lmw.view.SettingNextItemNotIconView
        android:id="@+id/receivable_queries_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:next_arrow="@drawable/btn_set_get"
        app:next_hint_color="@color/text_gray"
        app:next_icon="@drawable/my_hkcx"
        app:next_show_divider="false"
        app:next_title="回款查询"
        app:next_title_color="@color/text_black"/>

    <com.example.administrator.lmw.view.SettingNextItemNotIconView
        android:id="@+id/card_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:next_arrow="@drawable/btn_set_get"
        app:next_hint_color="@color/text_black"
        app:next_icon="@drawable/kqhb"
        app:next_show_divider="true"
        app:next_title="卡券红包"
        app:next_title_color="@color/text_black"/>

    <com.example.administrator.lmw.view.SettingNextItemNotIconView
        android:id="@+id/invite_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:next_arrow="@drawable/btn_set_get"
        app:next_hint="获取佣金"
        app:next_hint_color="@color/text_black"
        app:next_icon="@drawable/my_yqyl"
        app:next_show_divider="false"
        app:next_title="邀请有礼"
        app:next_title_color="@color/text_black"/>

    <com.example.administrator.lmw.view.SettingNextItemNotIconView
        android:id="@+id/lm_data_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_marginTop="@dimen/dp_10"
        app:next_arrow="@drawable/btn_set_get"
        app:next_hint="运营数据披露"
        app:next_hint_color="@color/text_gray"
        app:next_icon="@drawable/my_lmsh"
        app:next_show_divider="true"
        app:next_title="利民数据"
        app:next_title_color="@color/text_black"/>

    <com.example.administrator.lmw.view.SettingNextItemNotIconView
        android:id="@+id/finance_caculate_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:next_arrow="@drawable/btn_set_get"
        app:next_hint="投资好帮手"
        app:next_hint_color="@color/text_gray"
        app:next_icon="@drawable/my_lmjsq"
        app:next_show_divider="true"
        app:next_title="理财计算器"
        app:next_title_color="@color/text_black"/>

    <com.example.administrator.lmw.view.SettingNextItemNotIconView
        android:id="@+id/more_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        app:next_arrow="@drawable/btn_set_get"
        app:next_hint="关于利民网"
        app:next_hint_color="@color/text_gray"
        app:next_icon="@drawable/my_more"
        app:next_show_divider="false"
        app:next_title="更多"
        app:next_title_color="@color/text_black"/>

    <TextView
        android:id="@+id/version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/background_gray"
        android:gravity="center"
        android:padding="@dimen/dp_6"
        android:textColor="@color/text_gray"/>
</LinearLayout>
