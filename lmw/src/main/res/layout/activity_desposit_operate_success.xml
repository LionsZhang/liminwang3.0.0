<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_suc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_68"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bangka_suc"/>


    <TextView
        android:id="@+id/tv_bind_suc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_suc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:text="@string/text_bind_bankcard_suc"
        android:textColor="@color/bule_press"
        android:textSize="@dimen/sp_14"/>
    <TextView
        android:id="@+id/tv_risk_camuate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bind_suc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        android:textColor="@color/bule_press"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/tv_credit_hint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_below="@+id/tv_risk_camuate"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:text="债权正在等待认购中"
        android:visibility="invisible"
        android:textColor="@color/text_balck"
        android:textSize="@dimen/sp_14"/>

    <TextView
        android:id="@+id/tv_go_finace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_below="@+id/tv_credit_hint"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:background="@color/bg_bule"
        android:text="@string/text_go_finace"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"/>


</RelativeLayout>
