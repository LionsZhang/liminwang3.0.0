<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/select_list"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_26"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/account_title_tv"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:lines="1"
                        android:text="购买"
                        android:textColor="@color/select_list_title"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/account_money_tv"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_14"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:lines="1"
                        android:text="+50"
                        android:textColor="@color/select_list_detail"
                        android:textSize="@dimen/dp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_7"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/account_times_tv"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:lines="1"
                        android:text="2012-12-12 12:12:00"
                        android:textColor="@color/select_list_earnings"
                        android:textSize="@dimen/dp_9" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_14"
                        android:layout_weight="1"
                        android:gravity="right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="可用余额"
                            android:textColor="@color/select_list_earnings"
                            android:textSize="@dimen/dp_9" />

                        <TextView
                            android:id="@+id/account_surplus_moneys_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:lines="1"
                            android:text="200"
                            android:textColor="@color/select_list_earnings"
                            android:textSize="@dimen/dp_9" />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/select_list" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:lines="1"
                        android:text="备注:"
                        android:textColor="@color/announcement_tv"
                        android:textSize="@dimen/dp_9" />

                    <TextView
                        android:id="@+id/account_remark_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:lines="1"
                        android:text=""
                        android:textColor="@color/announcement_tv"
                        android:textSize="@dimen/dp_9" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/bule_view_up"
            android:layout_width="1dip"
            android:layout_height="@dimen/dp_29"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_11"
            android:background="@color/bg_bule" />


        <ImageView
            android:id="@+id/bule_ring_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_29"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/ic_lc_cir" />

        <View
            android:id="@+id/bule_view_dwon"
            android:layout_width="1dip"
            android:layout_height="71dp"
            android:layout_below="@id/bule_ring_iv"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_11"
            android:background="@color/bg_bule"/>

    </RelativeLayout>

</LinearLayout>