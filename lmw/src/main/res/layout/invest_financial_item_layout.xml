<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/select_list"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_19"
                android:adjustViewBounds="false"
                android:scaleType="centerInside"
                android:src="@drawable/con_lc_normal"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/item_titles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/announcement_tv"
                    android:textSize="@dimen/sp_13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text=""
                        android:textColor="@color/bg_bule"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:background="@color/select_list" />

                    <TextView
                        android:id="@+id/item_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:lines="1"
                        android:text=""
                        android:textColor="@color/announcement_tv"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:id="@+id/item_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/select_list_earnings"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/item_periods"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/select_list_earnings"
                    android:textSize="@dimen/sp_10" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/select_list" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_12">

                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_principal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text=""
                            android:textColor="@color/announcement_tv"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/item_principal"
                            android:layout_toRightOf="@id/item_principal"
                            android:text="元"
                            android:textColor="@color/select_list_earnings"
                            android:textSize="@dimen/sp_10" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/item_item_principal_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_2"
                        android:lines="1"
                        android:text="投资本金"
                        android:textColor="@color/select_list_earnings"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <ImageView
                        android:id="@+id/item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:adjustViewBounds="false"
                        android:scaleType="centerInside" />

                    <LinearLayout
                        android:id="@+id/lin2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center|left"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/item_income"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:text=""
                                android:textColor="@color/select_list_detail"
                                android:textSize="@dimen/sp_13" />

                            <TextView
                                android:id="@+id/item_income_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@id/item_income"
                                android:layout_toRightOf="@id/item_income"
                                android:text="元"
                                android:textColor="@color/select_list_earnings"
                                android:textSize="@dimen/sp_10" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/item_income_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="预期收益"
                            android:textColor="@color/select_list_earnings"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/lin2"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_15"
                        android:gravity="center|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/item_back_way_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text=""
                            android:textColor="@color/announcement_tv"
                            android:textSize="@dimen/sp_10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_weight="1"
                            android:lines="1"
                            android:text="还款方式"
                            android:textColor="@color/select_list_earnings"
                            android:textSize="@dimen/sp_10" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/select_list" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/item_value_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="起息日"
                    android:textColor="@color/announcement_tv"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/item_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/item_value_times"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text=""
                    android:textColor="@color/select_list_earnings"
                    android:textSize="@dimen/sp_10" />

                <ImageView
                    android:id="@+id/item_value_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_value_times"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_toRightOf="@id/item_value_times"
                    android:adjustViewBounds="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_lc_tec" />

                <TextView
                    android:id="@+id/item_sabbath_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_value_times"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_toRightOf="@+id/item_value_iv"
                    android:text="退出日"
                    android:textColor="@color/announcement_tv"
                    android:textSize="@dimen/dp_10" />

                <TextView
                    android:id="@+id/item_sabbath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/item_sabbath_times"
                    android:layout_below="@id/item_sabbath_times"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text=""
                    android:textColor="@color/select_list_earnings"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/continue_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/item_value_times"
                    android:layout_marginRight="@dimen/dp_18"
                    android:text=""
                    android:textColor="@color/announcement_tv"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/continue_set"
                    android:layout_marginRight="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_7"
                    android:text="续投方式"
                    android:textColor="@color/select_list_earnings"
                    android:textSize="@dimen/sp_10" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_stroke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_12">

                <TextView
                    android:id="@+id/item_protocol"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="协议查看"
                    android:textColor="@color/bule_press"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_9"
                    android:background="@color/text_stroke" />

                <TextView
                    android:id="@+id/back_plan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="回款计划"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_9"
                    android:background="@color/text_stroke" />

                <TextView
                    android:id="@+id/continue_set_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="续投设置"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>