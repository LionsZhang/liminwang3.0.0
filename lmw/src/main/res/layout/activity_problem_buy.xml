<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include layout="@layout/title_item_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_bule"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <TextView
                    android:id="@+id/problem_buy_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_14" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/white_lins"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_bule"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left|bottom"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|bottom|center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp_1"
                                android:layout_height="wrap_content"
                                android:src="@drawable/problem_buy_maop"
                                android:adjustViewBounds="false"
                                android:visibility="invisible"
                                android:scaleType="centerInside" />

                            <TextView
                                android:id="@+id/problem_buy_earnings_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_28" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/problem_buy_earnings_tv_x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14" />

                        <LinearLayout
                            android:id="@+id/problem_buy_lin"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/problem_buy_yields_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:text="~-"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_28" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/problem_buy_head_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/problem_buy_maop"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:paddingBottom="@dimen/dp_3"
                                    android:paddingLeft="@dimen/dp_4"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_10" />

                                <TextView
                                    android:id="@+id/problem_buy_yields_tv_per"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="bottom"
                                    android:lines="1"
                                    android:paddingBottom="@dimen/dp_4"
                                    android:text="%"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_18" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预期年化"
                        android:textColor="@color/white_gray"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:gravity="bottom|left"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/problem_buy_days_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_17" />

                            <TextView
                                android:id="@+id/problem_buy_days_unit_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="天"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="@string/investment_time"
                            android:textColor="@color/white_gray"
                            android:textSize="@dimen/sp_11" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center|right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/problem_buy_moneys_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_17" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:text="剩余额度（元）"
                            android:textColor="@color/white_gray"
                            android:textSize="@dimen/sp_11" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/white"
                android:padding="@dimen/dp_10">

                <EditText
                    android:id="@+id/problem_buy_money_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint=""
                    android:inputType="number"
                    android:maxLength="12"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/select_list_earnings"
                    android:textSize="@dimen/dp_13" />

                <Button
                    android:id="@+id/problem_buy_full_btn"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@null"
                    android:gravity="center"
                    android:text="全投"
                    android:textColor="@color/bg_bule"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:id="@+id/problem_buy_full_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="false"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:scaleType="centerInside"
                    android:src="@drawable/tips_notes" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/problem_buy_income_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/select_list"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_6">

                <TextView
                    android:id="@+id/problem_buy_income_tj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="填写投资金额"
                    android:textColor="@color/select_list_earnings"
                    android:textSize="@dimen/dp_11" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/problem_buy_income_yq_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/select_list"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预期收益"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/problem_buy_income_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="--/--"
                    android:textColor="@color/select_list_detail"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/dp_14" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:padding="@dimen/dp_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="可用余额"
                        android:textColor="@color/select_list_earnings"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:id="@+id/problem_buy_balance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="--/--"
                        android:textColor="@color/select_list_title"
                        android:textSize="@dimen/dp_13" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="元"
                        android:textColor="@color/select_list_earnings"
                        android:textSize="@dimen/dp_13" />


                </LinearLayout>

                <Button
                    android:id="@+id/problem_buy_recharge_btn"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_24"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_25"
                    android:background="@null"
                    android:text="充值"
                    android:textColor="@color/bg_bule"
                    android:textSize="@dimen/dp_13" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择优惠券"
                    android:textColor="@color/select_list_title"
                    android:textSize="@dimen/dp_13" />

                <LinearLayout
                    android:id="@+id/problem_buy_coupons_lin"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/problem_buy_coupons_tv_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/select_list_detail"
                        android:textSize="@dimen/dp_12" />

                    <TextView
                        android:id="@+id/modify_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:text=""
                        android:textColor="@color/select_list_title"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/problem_buy_coupons_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|right"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_6"
                        android:adjustViewBounds="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/finance_get" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/problem_buy_coupons_explanation_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:padding="@dimen/dp_10"
                android:text=""
                android:textColor="@color/select_list_earnings"
                android:textSize="@dimen/dp_11" />

            <RelativeLayout
                android:id="@+id/problem_buy_continue_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/dp_10"
                android:visibility="visible">


                <TextView
                    android:id="@+id/problem_buy_types_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_4"
                    android:text="回款续投方式"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:id="@+id/problem_buy_continue_about_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/problem_buy_types_tv"
                    android:adjustViewBounds="false"
                    android:paddingBottom="@dimen/dp_10"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:scaleType="centerInside"
                    android:src="@drawable/tips_notes" />

                <TextView
                    android:id="@+id/problem_buy_continue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_20"
                    android:text="不续投"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/sp_13" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_6"
                    android:adjustViewBounds="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/finance_get" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/select_panic_buying_btn"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/problem_buy_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="立即投资"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/problem_buy_jsq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="false"
                android:scaleType="centerInside"
                android:src="@drawable/ic_jsq" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>