<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mainStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title_layout"
            layout="@layout/title_item_layout" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee" />
        <RelativeLayout
            android:id="@+id/fill_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="提现申请成功，等待银行处理"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/credit_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:singleLine="true"
                android:textColor="@color/fill_h"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/credit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_below="@+id/credit"
                android:gravity="center"
                android:singleLine="true"
                android:text="提现时间"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee" />
        <RelativeLayout
            android:id="@+id/to_account_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
           >

            <TextView
                android:id="@+id/to_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="银行到账"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/to_account_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_below="@+id/to_account"
                android:gravity="center"
                android:singleLine="true"
                android:text="提现时间"
                android:textColor="@color/fill_h"
                android:textSize="@dimen/sp_10" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#eeeeee" />
        <RelativeLayout
            android:id="@+id/credit_rate_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/credit_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="手续费"
                android:layout_centerVertical="true"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/credit_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_14"
                android:singleLine="true"
                android:text="本次提现手续费利民君代付"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>


        <Button
            android:id="@+id/myAccount_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_line"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@color/text_blue"
            android:gravity="center"
            android:text="返回我的账户"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
</ScrollView>