<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_12"
        android:background="@drawable/log_bg_photos">

        <TextView
            android:id="@+id/pass_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_4"
            android:text="请验证交易密码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <View
            android:id="@+id/pass_line_1"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_below="@+id/pass_title"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_marginTop="12dp"
            android:background="@color/divide" />

        <TextView
            android:id="@+id/pass_tv_center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass_line_1"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="购买"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pass_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass_tv_center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_cz_bcard"
            android:drawablePadding="@dimen/dp_6"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_18"
            android:visibility="gone" />

        <EditText
            android:id="@+id/pass_psw_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/pass_tv_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/dialog_btn_white_bg"
            android:gravity="center"
            android:hint="请输入身份证后6位"
            android:digits="0123456789abcdefghigklmnopqrstuvwxyzQWERTYUIOPASDFGHJKLZXCVBNM"
            android:maxLength="6"
            android:orientation="horizontal"
            android:textColor="@color/select_list_title"
            android:textColorHint="@color/gray_text"
            android:textSize="@dimen/sp_14" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass_psw_container"
            android:layout_marginTop="19dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pass_left_text"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/dp_48"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_btn_rounded_left"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@drawable/dialog_button_text_color_selector"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:layout_marginTop="@dimen/dp_6"
                    android:background="@color/divide" />

                <TextView
                    android:id="@+id/pass_right_text"
                    android:layout_width="0dip"
                    android:layout_height="@dimen/dp_48"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_btn_rounded_right"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>