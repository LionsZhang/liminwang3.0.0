<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/ic_inv_xian" />

        <TextView
            android:id="@+id/select_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="请使用以下方式"
            android:textColor="@color/balck"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inv_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_inv_wechat"
                android:focusable="true"
                android:gravity="center"
                android:text="微信好友"
                android:textColor="@color/text_black_pre"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/inv_friends"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_inv_friends"
                android:focusable="true"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/text_black_pre"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/inv_sina"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_inv_sina"
                android:focusable="true"
                android:gravity="center"
                android:text="新浪微博"
                android:textColor="@color/text_black_pre"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inv_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_inv_qq"
                android:focusable="true"
                android:gravity="center"
                android:text="QQ好友"
                android:textColor="@color/text_black_pre"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/inv_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/ic_inv_addlist"
                android:focusable="true"
                android:gravity="center"
                android:text="通讯录"
                android:textColor="@color/text_black_pre"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:focusable="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text_black_pre"
                android:textSize="@dimen/sp_12"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>