<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_90"
    android:paddingBottom="@dimen/dp_52"
    >
    <ImageView
        android:id="@+id/instruction_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_38"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:src="@drawable/dengpao_tishi" />

    <TextView
        android:id="@+id/instruction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instruction_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_15"
        android:focusable="true"
        android:gravity="center"
        android:text="充值说明"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_16" />

    <View
        android:id="@+id/divide"
        android:layout_width="@dimen/dp_287"
        android:layout_height="1px"
        android:layout_below="@id/instruction_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_17"
        android:background="@color/xian" />

    <TextView
        android:id="@+id/instruction_txt"
        android:layout_width="@dimen/dp_287"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divide"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/close_iv"
        android:gravity="left"
        android:text="微信朋友圈"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_black" />
    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/dp_10"
        android:adjustViewBounds="false"
        android:scaleType="centerInside"
        android:src="@drawable/close_iv_large" />
</RelativeLayout>