<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_exit_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">


    <TextView
        android:id="@+id/dialog_total_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textColor="@color/select_list_title"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/dialog_total_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:gravity="center"
        android:text=""
        android:textColor="@color/select_list_earnings"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_18"
        android:background="@color/select_list" />

    <TextView
        android:id="@+id/dialog_total_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:gravity="center"
        android:text=""
        android:textColor="@color/bg_bule"
        android:textSize="@dimen/sp_16" />
</LinearLayout>