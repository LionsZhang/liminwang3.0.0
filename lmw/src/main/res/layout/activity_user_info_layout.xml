<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_default_divider"
    android:fillViewport="true"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/title_item_layout"
            android:id="@+id/title_layout"/>

        <com.example.administrator.lmw.view.SettingNextItemNotIconView
            android:id="@+id/name_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:next_icon="@drawable/ic_name"
            app:next_hint_color="@color/text_black"
            app:next_title_color="@color/text_black_pre"
            app:next_show_divider="true"
            app:next_title="姓名" />
        <com.example.administrator.lmw.view.SettingNextItemNotIconView
            android:id="@+id/phone_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:next_icon="@drawable/ic_iphone"
            app:next_title_color="@color/text_black_pre"
            app:next_hint_color="@color/text_black"
            app:next_show_divider="true"
            app:next_title="手机号码" />
        <com.example.administrator.lmw.view.SettingNextItemNotIconView
            android:id="@+id/bank_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:next_icon="@drawable/ic_card"
            app:next_title_color="@color/text_black_pre"
            app:next_hint_color="@color/text_black"
            app:next_show_divider="true"
            app:next_arrow="@drawable/btn_set_get"
            app:next_title="银行卡管理" />

    </LinearLayout>
</ScrollView>