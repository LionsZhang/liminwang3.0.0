<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_continue_set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14">

        <TextView
            android:id="@+id/continue_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:lines="1"
            android:text=""
            android:textColor="@color/announcement_tv"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/continue_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textColor="@color/bg_bule"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:background="@color/select_list" />

            <TextView
                android:id="@+id/continue_deadline_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:lines="1"
                android:text=""
                android:textColor="@color/announcement_tv"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_stroke" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14">

        <TextView
            android:id="@+id/continue_dates_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/continue_dates_tv"
            android:layout_marginTop="@dimen/dp_9"
            android:text="下一回款日"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/continue_interest_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/continue_interest_tv"
            android:layout_toRightOf="@id/continue_interest_tv"
            android:text="元"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/continue_interest_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_9"
            android:text="回款本息"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/continue_plan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/continue_plan_tv"
            android:layout_marginTop="@dimen/dp_9"
            android:text="续投方式"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_10" />

    </RelativeLayout>

    <TextView
        android:id="@+id/continue_way_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/dp_14"
        android:text="新续投方式:"
        android:textColor="@color/announcement_tv"
        android:textSize="@dimen/sp_13" />

    <RelativeLayout
        android:id="@+id/continue_back_way_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="续投方式"
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/continue_back_way_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/finance_get" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_stroke" />

    <RelativeLayout
        android:id="@+id/continue_types_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="续投产品类型"
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/continue_types_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:maxEms="12"
            android:lines="1"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/finance_get" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_stroke" />

    <RelativeLayout
        android:id="@+id/continue_term_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="续投产品期限"
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/continue_term_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:maxEms="12"
            android:lines="1"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/finance_get" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_stroke" />

    <RelativeLayout
        android:id="@+id/continue_repayment_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="还款方式"
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/continue_repayment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:maxEms="12"
            android:lines="1"
            android:ellipsize="end"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="false"
            android:scaleType="centerInside"
            android:src="@drawable/finance_get" />

    </RelativeLayout>

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/buy_blue_btn"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/continue_about_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/tips_notes"
        android:padding="@dimen/dp_14"
        android:text="  关于续投"
        android:textColor="@color/select_list_title"
        android:textSize="@dimen/sp_10" />

</LinearLayout>
