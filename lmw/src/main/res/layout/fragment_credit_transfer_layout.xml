<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/select_list"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/select_list" />

        <LinearLayout
            android:id="@+id/credit_earnings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/credit_earnings_lin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/sp_16"
                android:paddingTop="@dimen/sp_16">

                <TextView
                    android:id="@+id/credit_earnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="预期年化收益"
                    android:textColor="@color/announcement_tv"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/credit_earnings_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:adjustViewBounds="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/credit_default" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/credit_period_lin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/sp_16"
                android:paddingTop="@dimen/sp_16">

                <TextView
                    android:id="@+id/credit_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="剩余期限"
                    android:textColor="@color/announcement_tv"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/credit_period_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:adjustViewBounds="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/credit_default" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/credit_default_lin"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/sp_16"
                android:paddingTop="@dimen/sp_16">

                <TextView
                    android:id="@+id/credit_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/default_text"
                    android:textColor="@color/select_list_buy"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/select_list" />

        <com.example.administrator.lmw.view.XListView
            android:id="@+id/xlistview_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/select_list"
            android:divider="@null">

        </com.example.administrator.lmw.view.XListView>
    </LinearLayout>
</LinearLayout>