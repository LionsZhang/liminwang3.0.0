<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mainStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_divide"
    android:fillViewport="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title_layout"
            layout="@layout/title_item_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bb_bj">
            <TextView
                android:id="@+id/bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@null"
                android:gravity="center"
                android:text="新网银行"
                android:drawableLeft="@drawable/pic_logo_xw"
                android:drawablePadding="@dimen/dp_5"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/bank_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:gravity="center"
                android:text="电子交易账户"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_18"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/account_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bank_name"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="9.7dp"
                android:layout_marginRight="9.7dp"
                android:paddingLeft="17.3dp"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:background="@color/text_blue"
                android:gravity="left|center_vertical"
                android:text="账户ID123424144"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_id"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:gravity="left|bottom"
                android:text="账户名:"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/account_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/account_name"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_27"
                android:layout_alignParentLeft="true"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:text="账户余额:"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_17"
            >
            <TextView
                android:id="@+id/invest_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="75.3dp"
                android:background="@null"
                android:gravity="center"
                android:text="投资"
                android:textColor="@color/bule_press"
                android:textSize="@dimen/sp_16" />
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_10"
                android:layout_centerInParent="true"
                android:background="@color/first_divide"/>
            <TextView
                android:id="@+id/fill_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="75.7dp"
                android:background="@null"
                android:gravity="center"
                android:text="充值"
                android:textColor="@color/bule_press"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>