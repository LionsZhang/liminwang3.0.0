<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dip"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/mEdt_parking_one"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/excharge_psw_input_bg"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:inputType="numberPassword"
            android:maxLength="1"
            android:textSize="16sp"/>
        <EditText
            android:id="@+id/mEdt_parking_two"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/excharge_psw_input_bg"
            android:gravity="center"
            android:layout_toRightOf="@+id/mEdt_parking_one"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"
            android:maxLength="1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/mEdt_parking_three"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/excharge_psw_input_bg"
            android:gravity="center"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mEdt_parking_two"
            android:maxLength="1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/mEdt_parking_four"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/excharge_psw_input_bg"
            android:gravity="center"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mEdt_parking_three"
            android:maxLength="1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/mEdt_parking_five"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/excharge_psw_input_bg"
            android:gravity="center"
            android:inputType="numberPassword"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mEdt_parking_four"
            android:maxLength="1"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/mEdt_parking_six"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:background="@drawable/input_frame"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mEdt_parking_five"
            android:inputType="textPassword"
            android:maxLength="1"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>