<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_kong"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_selector"
        android:orientation="horizontal"
        android:padding="@dimen/dp_14">

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/message_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:adjustViewBounds="false"
                android:scaleType="centerInside"
                android:src="@drawable/ic_notice_mes_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/announcement_tv"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/message_dwon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="false"
                        android:scaleType="centerInside"
                        android:src="@drawable/arrow_notice01" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/message_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:lines="1"
                android:text=""
                android:textColor="@color/select_list_earnings"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="您的交易密码修改成功，如非本人操作，请及时联系在线客服或拨打客服热线400-8318-999"
                android:textColor="@color/select_list_earnings"
                android:textSize="11sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divide" />


</LinearLayout>