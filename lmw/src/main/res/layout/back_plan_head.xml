<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14">

        <TextView
            android:id="@+id/back_plan_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="12"
            android:text=""
            android:textColor="@color/announcement_tv"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/back_plan_rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textColor="@color/bg_bule"
                android:textSize="@dimen/sp_13" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_6"
                android:background="@color/select_list" />

            <TextView
                android:id="@+id/back_plan_days_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:lines="1"
                android:text=""
                android:textColor="@color/announcement_tv"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_stroke" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14">

        <TextView
            android:id="@+id/back_plan_investment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_plan_investment_tv"
            android:layout_toRightOf="@id/back_plan_investment_tv"
            android:text="元"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/back_plan_investment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/back_plan_investment_tv"
            android:layout_marginTop="@dimen/dp_9"
            android:text="投资本金"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/back_plan_receive_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_plan_receive_tv"
            android:layout_toRightOf="@id/back_plan_receive_tv"
            android:text="元"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_plan_receive_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_9"
            android:text="已收本金"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/back_plan_pay_income_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_plan_investment_tv"
            android:layout_toLeftOf="@+id/plan_pay_yuan"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/plan_pay_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_plan_investment_tv"
            android:layout_alignParentRight="true"
            android:text="元"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/back_plan_pay_income_tv"
            android:layout_marginTop="@dimen/dp_9"
            android:text="已收收益"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/back_plan_pay_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/back_plan_investment"
            android:layout_marginTop="@dimen/dp_4"
            android:text="(支付金额:)"
            android:textColor="@color/orange"
            android:textSize="@dimen/sp_9" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_stroke" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dp_14">

        <TextView
            android:id="@+id/back_plan_to_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_plan_to_pay_tv"
            android:layout_toRightOf="@id/back_plan_to_pay_tv"
            android:text="元"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/back_plan_to_pay_tv"
            android:layout_marginTop="@dimen/dp_9"
            android:text="待收本金"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/back_plan_to_revenue_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/back_plan_to_revenue_tv"
            android:layout_toRightOf="@id/back_plan_to_revenue_tv"
            android:text="元"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/back_plan_to_revenue_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_9"
            android:text="预期收益"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/back_plan_back_day_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:textColor="@color/select_list_title"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/back_plan_back_day_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/back_plan_back_day_tv"
            android:layout_marginTop="@dimen/dp_9"
            android:text="退出日期"
            android:textColor="@color/select_list_earnings"
            android:textSize="@dimen/sp_11" />

    </RelativeLayout>

    <TextView
        android:id="@+id/back_plan_way_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:gravity="center|left"
        android:padding="@dimen/dp_14"
        android:text="回款方式："
        android:textColor="@color/announcement_tv"
        android:textSize="@dimen/sp_12" />

</LinearLayout>